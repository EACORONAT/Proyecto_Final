@model MvcCongresoTIC.Models.Conferencia

@{
    ViewData["Title"] = "Listado";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Logos en la barra de navegación -->
            <div class="d-flex align-items-center">
                <img src="~/images/itl_logo.jpeg" alt="Logo de la Institución" width="50" height="50" class="mr-2">
                <img src="~/images/congreso_logo.png" alt="Logo del Congreso" width="70" height="50" class="ms-2">
            </div>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold ms-2" asp-area="" asp-controller="Home" asp-action="Inicio">
                            <b>Inicio</b>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold" asp-area="" asp-controller="Home" asp-action="Participantes">
                            <b>Participantes</b>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold" asp-area="" asp-controller="Home" asp-action="Registro">
                            <b>Registro</b>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bold" asp-area="" asp-controller="Home" asp-action="Conferencias">
                            <b>Conferencias</b>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

@*------------------------------------------------------------------------------------------------------------------------------*@

<h2><b>Asistentes a la conferencia: </b>@Model.Titulo</h2>

@if (Model.Asistentes.Any())
{
    <div class="row">
        @foreach (var asistente in Model.Asistentes)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (asistente.Participante != null)
                    {
                        <img src="@Url.Content($"~/images/A-{asistente.Participante.AvatarId}.jpg")" class="card-img-top" alt="Avatar">
                        <div class="card-body">
                            <h5 class="card-title">@asistente.Participante.NombreCompleto</h5>                            
                        </div>
                    }
                    else
                    {
                        <div class="card-body">
                            <p class="card-text">Participante no disponible</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No hay asistentes registrados aún.</p>
}

<div class="form-group text-center">
    <div class="btn-group" role="group">
        <a asp-controller="Conferencias" asp-action="Index" class="btn btn-dark btn-block"><b>Regresar</b></a>        
    </div>
</div>